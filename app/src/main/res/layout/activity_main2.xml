<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/sunnyspellsregularmv9ze"
        android:textColor="@color/white"
        android:textSize="120sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sunnyspellsregularmv9ze"
        android:text="C"
        android:textColor="@color/white"
        android:textSize="120sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/sunnyspellsregularmv9ze"
        android:text="o"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                app:srcCompat="@drawable/wind" />

            <ImageView
                android:id="@+id/humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                app:srcCompat="@drawable/humidity" />

            <ImageView
                android:id="@+id/hottemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                app:srcCompat="@drawable/hottemp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/windspeed"
                android:layout_width="match_parent"
                android:layout_height="119.5dp"
                android:fontFamily="@font/sunnyspellsregularmv9ze"
                android:gravity="clip_horizontal|center|center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/humiditycal"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:fontFamily="@font/sunnyspellsregularmv9ze"
                android:gravity="center|center_horizontal|center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/max"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:fontFamily="@font/sunnyspellsregularmv9ze"
                android:gravity="center|fill_horizontal|center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tempurature"
                android:layout_width="match_parent"
                android:layout_height="119.5dp"
                android:background="@drawable/rounded_corners"
                app:srcCompat="@drawable/temp" />

            <ImageView
                android:id="@+id/pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                app:srcCompat="@drawable/pressure" />

            <ImageView
                android:id="@+id/cold"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:background="@drawable/rounded_corners"
                app:srcCompat="@drawable/cold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feel"
                android:layout_width="match_parent"
                android:layout_height="119.5dp"
                android:fontFamily="@font/sunnyspellsregularmv9ze"
                android:gravity="center|center_horizontal|center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/pa"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:fontFamily="@font/sunnyspellsregularmv9ze"
                android:gravity="clip_horizontal|center|center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/min"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:fontFamily="@font/sunnyspellsregularmv9ze"
                android:gravity="clip_horizontal|center|center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sunnyspellsregularmv9ze"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sunnyspellsregularmv9ze"
        android:textColor="@color/white"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>